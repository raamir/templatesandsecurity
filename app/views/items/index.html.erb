<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.amount %></td>
        <td><%= link_to 'Show', item , class:"btn btn-xs btn-success" %></td>
        <td><%= link_to 'Edit', edit_item_path(item) , class:"btn btn-xs btn-primary" %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path , class:"btn btn-xs btn-info" %>
